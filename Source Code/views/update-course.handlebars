<h2>Update Course</h2>

<form id="update-form">
  <input type="hidden" id="update-item-path" value="courses" />
  <input type="hidden" id="update-item-id" value="{{course.course_id}}" />
  <div class="form-group">
    <label for="name">Course name</label>
    <input type="text" class="form-control" name="name" value="{{course.name}}" required />
  </div>
  <div class="form-group">
    <label for="year">Course year</label>
    <input type="number" class="form-control" name="year" value="{{course.year}}" required />
  </div>
  <div class="form-group">
    <label for="term">Course term</label>
		<select class="form-control" name="term" required>
			<option value="Spring" {{#ifCond course.term "==" "Spring"}}selected{{/ifCond}}>Spring</option>
			<option value="Summer" {{#ifCond course.term "==" "Summer"}}selected{{/ifCond}}>Summer</option>
			<option value="Fall" {{#ifCond course.term "==" "Fall"}}selected{{/ifCond}}>Fall</option>
			<option value="Winter" {{#ifCond course.term "==" "Winter"}}selected{{/ifCond}}>Winter</option>
		</select>
  </div>
  <div class="form-group">
    <label for="instructor_id">Instructor</label>
    <select class="form-control" name="instructor_id" required>
      {{#each instructors}}
        <option value="{{instructor_id}}" {{#ifCond ../course.instructor_id "==" instructor_id}}selected{{/ifCond}}>{{first_name}} {{last_name}}</option>
      {{/each}}
    </select>
  </div>
  <div class="form-group">
    <label for="textbook_id">Textbook</label>
    <select class="form-control" name="textbook_id">
      <option></option>
      {{#each textbooks}}
        <option value="{{textbook_id}}" {{#ifCond ../course.textbook_id "==" textbook_id}}selected{{/ifCond}}>{{name}} ({{author}})</option>
      {{/each}}
    </select>
  </div>  <button type="submit" class="btn btn-primary">Update Course</button>
</form>